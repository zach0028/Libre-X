# ==================================================
# LIBRE-X Minimal Configuration
# ==================================================

version: 1.2.0

# ==================================================
# Cache Settings
# ==================================================
cache: true

# ==================================================
# File Upload Configuration
# ==================================================
fileConfig:
  endpoints:
    default:
      totalSizeLimit: 20
  serverFileSizeLimit: 100
  avatarSizeLimit: 2

# ==================================================
# Registration & Login
# ==================================================
registration:
  allowedDomains:
    - "*"

# ==================================================
# Interface Configuration
# ==================================================
interface:
  endpointsMenu: true
  modelSelect: true
  parameters: true

# App title is configured via APP_TITLE environment variable in .env
