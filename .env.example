# =====================================================
# LIBRE-X CONFIGURATION
# Copy this file to .env and fill in your values
# =====================================================

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================

# Supabase Project URL (get from Supabase Dashboard)
SUPABASE_URL=https://your-project.supabase.co

# Supabase Keys (get from Supabase Dashboard → Settings → API)
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# =====================================================
# SERVER CONFIGURATION
# =====================================================

# Port for backend server (default: 9087)
PORT=9087

# Host (default: localhost)
HOST=localhost

# =====================================================
# DATABASE MODE
# =====================================================

# Set to "supabase" to use Supabase, "mongodb" for MongoDB
DB_MODE=supabase

# =====================================================
# LEGACY MONGODB (Optional - only if using MongoDB)
# =====================================================

# MONGO_URI=mongodb://127.0.0.1:27017/LibreChat

# =====================================================
# OPTIONAL: OAuth Providers
# Configure in Supabase Dashboard → Authentication → Providers
# =====================================================

# GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=GOCSPX-xxxxxxxxxxxxxxxxxxxxx

# GITHUB_CLIENT_ID=Iv1.xxxxxxxxxxxxxxxx
# GITHUB_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =====================================================
# OPTIONAL: SMTP (for emails)
# =====================================================

# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# SMTP_FROM=noreply@your-domain.com
